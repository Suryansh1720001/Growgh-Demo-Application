<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.growgh"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Growigh"
        tools:targetApi="31">
        <activity
            android:name="com.example.growgh.ImageShowcase"
            android:exported="false" />
        <activity
            android:name="com.example.growgh.Upload_Image"
            android:exported="false"
            android:requestLegacyExternalStorage="true" />
        <activity
            android:name="com.example.growgh.HomeScreen"
            android:exported="false" />
        <activity
            android:name="com.example.growgh.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>